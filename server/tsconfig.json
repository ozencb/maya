{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@Constants/*": ["constants/*"],
      "@Constants": ["constants"],
      "@Controllers/*": ["controllers/*"],
      "@Controllers": ["controllers"],
      "@Helpers/*": ["helpers/*"],
      "@Helpers": ["helpers"],
      "@Lib/*": ["lib/*"],
      "@Lib": ["lib"],
      "@Loaders/*": ["loaders/*"],
      "@Loaders": ["loaders"],
      "@Middlewares/*": ["middlewares/*"],
      "@Middlewares": ["middlewares"],
      "@Models/*": ["models/*"],
      "@Models": ["models"],
      "@Repositories/*": ["repositories/*"],
      "@Repositories": ["repositories"],
      "@Routes/*": ["routes/*"],
      "@Routes": ["routes"],
      "@Schemas/*": ["schemas/*"],
      "@Schemas": ["schemas"],
      "@Services/*": ["services/*"],
      "@Services": ["services"],
      "@SQL/*": ["sql/*"],
      "@SQL": ["sql"],
      "@Utils/*": ["utils/*"],
      "@Utils": ["utils"]
    },
    "target": "es2017",
    "module": "commonjs",
    "lib": ["dom", "es6", "es2017", "esnext.asynciterable"],
    "skipLibCheck": true,
    "sourceMap": true,
    "outDir": "./dist",
    "moduleResolution": "node",
    "removeComments": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true
  },
  "exclude": ["node_modules"],
  "include": ["./src/**/*.ts"]
}
