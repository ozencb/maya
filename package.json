{
  "name": "maya",
  "version": "1.0.0",
  "description": "A PERN + friends boilerplate app",
  "scripts": {
    "install-dependencies": "cd server && yarn && cd ../client && yarn",
    "pre-commit": "cd server && yarn pre-commit && cd ../client && yarn pre-commit",
    "pre-push": "cd server && yarn pre-push && cd ../client && yarn pre-push",
    "prepare": "husky install"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn pre-commit",
      "pre-push": "yarn pre-push"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Ozencb/maya.git"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Ozencb/maya/issues"
  },
  "homepage": "https://github.com/Ozencb/maya#readme",
  "devDependencies": {
    "husky": "^7.0.4"
  }
}
